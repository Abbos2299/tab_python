[Unit]
Description=Gunicorn instance to serve def_com
After=network.target

[Service]
User=ec2-user
WorkingDirectory=/home/ec2-user/def_com
Environment="PATH=/home/ec2-user/def_com/bin"
ExecStart=/home/ec2-user/def_com/bin/gunicorn -w 1 -b 0.0.0.0:5000 --timeout 120 def_com:app

[Install]
WantedBy=multi-user.target
